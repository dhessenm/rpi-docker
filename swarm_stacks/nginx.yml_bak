version: '3'

services:
  web:
    image: dhessenm/armhf-nginx
    deploy:
      placement:
        constraints:
          - node.labels.htype==front
      restart_policy:
        condition: on-failure
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - "/etc/letsencrypt:/etc/letsencrypt:ro"

